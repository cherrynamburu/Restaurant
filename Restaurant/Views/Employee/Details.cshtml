@model EmployeeDetailsViewModel

@{
    ViewBag.Title = Model.PageTitle;
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}


<div class="row justify-content-center m-3">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-img text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true"/>

                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Edit" asp-route-Id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@Model.Employee.Id" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>
